<div class="row">
  <div class="col s12 m12 l12">
    <h3 class="center-align">Blog</h3>
    <div class="row" id="masonry-grid">
      <%site.posts.sort('date', -1).each(function(post){ %>
        <div class="col s6 m4">
          <div class="card z-depth-3 blue-grey white-text hoverable">
            <div class="card-content">
              <span class="card-title"><%= post.title || '(no title)' %></span>
              <p>
                <%- post.excerpt || '(no excerpt)' %>
              </p>
            </div>
            <div class="card-action">
              <span>Published on: <b><%= post.date.format(config.date_format) || '(no date????)' %></b></span>
              <span class="right-align"><a class="btn-floating waves-effect waves-light orange halfway-fab" href="<%- url_for(post.path) %>"><i class="material-icons">chevron_right</i></a></span>
            </div>
          </div>
        </div>
        <%}) %>
    </div>
  </div>
  <%- partial('_partial/blognav.ejs') %>
</div>
