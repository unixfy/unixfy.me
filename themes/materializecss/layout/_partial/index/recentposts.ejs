<div class="row recentposts-wrapper">
	<div class="col s12 m12 l12">
		<h4 class="center-align">Recent Posts</h4><br>
    <% site.posts.sort('date', -1).limit(4).each(function(post){ %>
		<div class="col s6 m6 l3">
			<div class="card blue-grey darken-1">
				<div class="card-content white-text">
					<span class="card-title"><%= post.title || '(no title)' %></span>
					<p class="truncate"><%- post.excerpt || '(no excerpt)' %></p>
				</div>
				<div class="card-action">
					<p class="white-text">Published on: <b><%= post.date.format(config.date_format) || '(no date????)' %></b></p>
				</div>
				<a class="btn-floating waves-effect waves-light orange halfway-fab" href="<%- url_for(post.path) %>"><i class="material-icons">open_in_browser</i></a>
			</div>
		</div>
    <% }) %>
	</div>
</div>